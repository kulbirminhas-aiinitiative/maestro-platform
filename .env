# Maestro Platform Environment Variables Example
# Copy this file to .env and update with your actual values

# ========================================
# Service URLs
# ========================================
DISCUSSION_ORCHESTRATOR_URL=http://discussion-orchestrator:5000
EXECUTION_PLATFORM_URL=http://execution-platform:8080

# ========================================
# Redis Configuration
# ========================================
REDIS_URL=redis://redis:6379
REDIS_DB=0
REDIS_MAX_CONNECTIONS=10

# ========================================
# Discussion Orchestrator Configuration
# ========================================
# Service Port
SERVICE_PORT=5000

# Logging
LOG_LEVEL=INFO

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:4300,http://localhost:3000

# AutoGen Configuration
AUTOGEN_MAX_ROUNDS=20
AUTOGEN_TIMEOUT=300

# ========================================
# Execution Platform Configuration
# ========================================
EXECUTION_PLATFORM_API_KEY=your-api-key-here

# ========================================
# LLM Provider Configuration
# ========================================
# OpenAI
OPENAI_API_KEY=your-openai-api-key

# Anthropic
ANTHROPIC_API_KEY=your-anthropic-api-key

# ========================================
# WebSocket Configuration
# ========================================
WS_HEARTBEAT_INTERVAL=30
WS_MAX_MESSAGE_SIZE=1048576

# ========================================
# Security
# ========================================
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1

# ========================================
# Development/Production Mode
# ========================================
ENVIRONMENT=development
DEBUG=false
