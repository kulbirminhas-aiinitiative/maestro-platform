# Claude Team SDK - Environment Configuration Template
# Copy this file to .env and update with your values

# ============================================================================
# Database Configuration (PostgreSQL)
# ============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=claude_team
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=claude_team

# Connection pool settings
POSTGRES_POOL_SIZE=10
POSTGRES_MAX_OVERFLOW=20

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# Cache TTL (seconds)
CACHE_TTL=300

# ============================================================================
# MinIO / S3 Configuration (for artifact storage)
# ============================================================================
MINIO_ENDPOINT=localhost:9000
MINIO_USER=minio_admin
MINIO_PASSWORD=your_minio_password_here
MINIO_BUCKET=claude-team-artifacts
MINIO_SECURE=false  # Set to true for HTTPS

# Or use AWS S3
# S3_BUCKET=your-s3-bucket
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=us-east-1

# ============================================================================
# Claude API Configuration
# ============================================================================
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_MODEL=claude-sonnet-4-5-20250929

# ============================================================================
# Application Settings
# ============================================================================
# Environment: development, staging, production
ENVIRONMENT=development

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable debug mode (verbose logging)
DEBUG=false

# ============================================================================
# Security Settings
# ============================================================================
# Secret key for sessions/tokens (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your_secret_key_here

# JWT token expiration (seconds)
TOKEN_EXPIRATION=3600

# Enable RBAC enforcement
ENABLE_RBAC=true

# ============================================================================
# Monitoring & Metrics (Optional)
# ============================================================================
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_grafana_password_here

PROMETHEUS_PORT=9090

# Enable metrics collection
ENABLE_METRICS=true
METRICS_PORT=9100

# ============================================================================
# Workflow Engine Settings
# ============================================================================
# Max concurrent workflows
MAX_CONCURRENT_WORKFLOWS=10

# Workflow execution timeout (seconds)
WORKFLOW_TIMEOUT=3600

# Task retry attempts
TASK_MAX_RETRIES=3

# ============================================================================
# Rate Limiting
# ============================================================================
# Max API calls per minute per agent
RATE_LIMIT_PER_MINUTE=60

# Max concurrent tasks per agent
MAX_TASKS_PER_AGENT=3

# ============================================================================
# Event System
# ============================================================================
# Enable event-driven architecture
ENABLE_EVENTS=true

# Event retention (seconds)
EVENT_RETENTION=86400

# ============================================================================
# Backup Configuration
# ============================================================================
# Enable automatic backups
ENABLE_BACKUPS=true

# Backup schedule (cron format)
BACKUP_SCHEDULE="0 2 * * *"  # 2 AM daily

# Backup retention days
BACKUP_RETENTION_DAYS=30

# ============================================================================
# Development Settings (not for production)
# ============================================================================
# Reload on code changes
AUTO_RELOAD=true

# Enable SQL query logging
LOG_SQL=false

# Use in-memory database for testing
USE_SQLITE_TEST=false
