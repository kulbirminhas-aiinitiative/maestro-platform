# Claude Team SDK - Environment Configuration
# Copy this file to .env and update with your values

# ============================================================================
# Service URLs
# ============================================================================

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/claude_team_sdk

# Redis (for caching and session management)
REDIS_URL=redis://localhost:6379/0

# API Base URL
API_BASE_URL=http://localhost:4000

# ============================================================================
# Team SDK Configuration
# ============================================================================

# Maximum number of agents in a team
MAX_AGENTS=10

# Coordination timeout (seconds)
COORDINATION_TIMEOUT=30

# Agent execution timeout (seconds)
AGENT_EXECUTION_TIMEOUT=300

# Enable debug logging
DEBUG=false

# ============================================================================
# Claude SDK Configuration
# ============================================================================

# Claude API Key (required)
ANTHROPIC_API_KEY=your_api_key_here

# Model to use
CLAUDE_MODEL=claude-sonnet-4.0

# ============================================================================
# Resilience Configuration
# ============================================================================

# Circuit breaker settings
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_SUCCESS_THRESHOLD=2
CIRCUIT_BREAKER_TIMEOUT=60

# Retry settings
MAX_RETRIES=3
INITIAL_RETRY_DELAY=1.0
RETRY_BACKOFF_FACTOR=2.0

# Timeout settings
DEFAULT_TIMEOUT=30

# Bulkhead settings
MAX_CONCURRENT_AGENTS=4

# ============================================================================
# Monitoring & Observability
# ============================================================================

# Prometheus metrics endpoint
METRICS_PORT=9090

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ============================================================================
# Development Settings
# ============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Enable hot reload
HOT_RELOAD=true

# ============================================================================
# Example-Specific Settings (for examples/ directory)
# ============================================================================

# SDLC Team Example
SDLC_OUTPUT_DIR=/tmp/claude_team_sdk_output

# Maestro ML Example
MLFLOW_TRACKING_URI=http://localhost:5000
GRAFANA_URL=http://localhost:3001

# ============================================================================
# Security (Production Only)
# ============================================================================

# JWT Secret (generate with: python -c "import secrets; print(secrets.token_hex(32))")
# JWT_SECRET=your_secret_here_change_in_production

# API Rate Limiting
# RATE_LIMIT_PER_MINUTE=100

# CORS Origins (comma-separated)
# CORS_ORIGINS=http://localhost:3000,http://localhost:4200
