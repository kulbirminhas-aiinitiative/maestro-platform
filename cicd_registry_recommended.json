{
  "project": {
    "name": "quality-fabric",
    "description": "Quality Fabric - Comprehensive Testing as a Service Platform",
    "version": "1.0.0",
    "repository": "https://github.com/your-org/quality-fabric",
    "language": "python",
    "framework": "fastapi",
    "dependency_manager": "poetry"
  },
  "services": [
    {
      "name": "testing_api",
      "description": "Main testing service API",
      "port": 8000,
      "health_check": "/health",
      "entry_point": "main.py",
      "capabilities": ["testing", "api", "orchestration"],
      "dependencies": ["redis"],
      "environment_variables": {
        "SERVICE_NAME": "testing_api",
        "HOST": "0.0.0.0",
        "PORT": "8000",
        "ENVIRONMENT": "production"
      }
    },
    {
      "name": "kubernetes_execution",
      "description": "Kubernetes execution service for ephemeral testing environments",
      "port": 8001,
      "health_check": "/health",
      "entry_point": "services/api/kubernetes_execution_api.py",
      "capabilities": ["kubernetes", "execution", "ephemeral-environments"],
      "dependencies": ["kubernetes-cluster"],
      "environment_variables": {
        "SERVICE_NAME": "kubernetes_execution",
        "HOST": "0.0.0.0",
        "PORT": "8001",
        "ENVIRONMENT": "production"
      }
    }
  ],
  "ci_cd": {
    "pipeline": ".github/workflows/ci.yml",
    "test_commands": {
      "unit": "poetry run pytest tests/unit/ -v --cov=services",
      "integration": "poetry run pytest tests/integration/ -v",
      "e2e": "poetry run pytest tests/e2e/ -v",
      "performance": "poetry run pytest tests/ -m performance"
    },
    "quality_gates": {
      "code_coverage": 55,
      "code_coverage_target": 80,
      "code_coverage_incremental": true,
      "pylint_score": 7.5,
      "pylint_score_target": 8.0,
      "security_scan": "required",
      "security_fail_on_high": true,
      "performance_threshold": "p95 < 200ms",
      "notes": "Progressive gates: Start at 55%/7.5, target 80%/8.0 by 2025-10-31"
    },
    "quality_roadmap": {
      "phase_1": {
        "date": "2025-10-07",
        "coverage": 55,
        "pylint": 7.5,
        "focus": "Service Registry, Core API tests"
      },
      "phase_2": {
        "date": "2025-10-14",
        "coverage": 65,
        "pylint": 7.5,
        "focus": "Integration tests, Orchestration"
      },
      "phase_3": {
        "date": "2025-10-21",
        "coverage": 75,
        "pylint": 8.0,
        "focus": "AI services, Edge cases"
      },
      "phase_4": {
        "date": "2025-10-31",
        "coverage": 80,
        "pylint": 8.0,
        "focus": "Final coverage gaps"
      }
    },
    "deployment": {
      "staging": {
        "enabled": true,
        "trigger": "push to main",
        "auto_deploy": true,
        "quality_gates_enforced": false
      },
      "production": {
        "enabled": true,
        "trigger": "manual approval",
        "auto_deploy": false,
        "quality_gates_enforced": true,
        "required_coverage": 80,
        "required_pylint": 8.0
      }
    },
    "notifications": {
      "channels": ["github", "slack"],
      "on_failure": true,
      "on_success": false,
      "on_quality_gate_miss": true
    }
  },
  "environments": {
    "development": {
      "base_url": "http://localhost:8000",
      "redis_url": "redis://localhost:6379",
      "log_level": "DEBUG",
      "quality_gates_enforced": false
    },
    "testing": {
      "base_url": "http://localhost:8005",
      "redis_url": "redis://localhost:6379",
      "log_level": "INFO",
      "quality_gates_enforced": false
    },
    "staging": {
      "base_url": "https://staging.quality-fabric.io",
      "redis_url": "redis://staging-redis:6379",
      "log_level": "INFO",
      "quality_gates_enforced": false
    },
    "production": {
      "base_url": "https://quality-fabric.io",
      "redis_url": "redis://prod-redis:6379",
      "log_level": "WARNING",
      "quality_gates_enforced": true
    }
  },
  "infrastructure": {
    "docker": {
      "enabled": true,
      "dockerfile": "Dockerfile",
      "image_registry": "dockerhub",
      "image_name": "qualityfabric/platform"
    },
    "kubernetes": {
      "enabled": true,
      "manifests": "infrastructure/k8s/",
      "namespace": "quality-fabric",
      "ingress": true
    },
    "monitoring": {
      "prometheus": true,
      "grafana": true,
      "jaeger": true,
      "log_aggregation": "elasticsearch",
      "coverage_tracking": true,
      "quality_metrics_dashboard": true
    }
  },
  "dependencies": {
    "runtime": {
      "python": "^3.9",
      "poetry": "^1.0.0"
    },
    "external_services": {
      "redis": {
        "version": "7.0",
        "required": true
      },
      "postgresql": {
        "version": "15.0",
        "required": false,
        "purpose": "test results storage"
      },
      "kubernetes": {
        "version": "1.27+",
        "required": false,
        "purpose": "ephemeral test environments"
      }
    }
  },
  "testing_strategy": {
    "current_coverage": 40,
    "test_files": 3,
    "source_files": 34,
    "priority_areas": [
      "Service Registry (new code)",
      "Testing Service API (critical path)",
      "Test Orchestrator (partially tested)",
      "Test Adapters (partially tested)"
    ],
    "deferred_areas": [
      "AI/ML services (complex, low ROI)",
      "Kubernetes execution (requires cluster)",
      "E2E scenarios (environment setup)"
    ]
  },
  "metadata": {
    "created_at": "2025-09-29T17:00:00Z",
    "last_updated": "2025-09-29T18:30:00Z",
    "quality_gates_updated": "2025-09-29T18:30:00Z",
    "maintainers": ["quality-fabric-team"],
    "tags": ["testing", "quality-assurance", "ci-cd", "automation", "progressive-quality"],
    "license": "MIT"
  }
}