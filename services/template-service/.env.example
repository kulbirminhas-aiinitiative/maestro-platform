# Maestro Template Service - Environment Configuration
# Strategic Template Engine for Maestro Platform

# ============================================================================
# Service Configuration
# ============================================================================
SERVICE_NAME=template-service
SERVICE_PORT=8005
ENVIRONMENT=development

# ============================================================================
# Database Configuration (PostgreSQL)
# ============================================================================
POSTGRES_HOST=maestro-postgres
POSTGRES_PORT=5432
POSTGRES_DB=maestro_templates
POSTGRES_USER=maestro
POSTGRES_PASSWORD=change_me

# Database URL (constructed from above or override)
DATABASE_URL=postgresql://maestro:change_me@maestro-postgres:5432/maestro_templates

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_HOST=maestro-redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Redis URL (constructed from above or override)
REDIS_URL=redis://maestro-redis:6379/0

# ============================================================================
# Redis Streams
# ============================================================================
STREAM_TEMPLATE_REQUESTS=maestro:streams:templates:requests
STREAM_TEMPLATE_RESULTS=maestro:streams:templates:results
STREAM_TEMPLATE_USAGE=maestro:streams:templates:usage

# ============================================================================
# Consumer Groups
# ============================================================================
CONSUMER_GROUP_TEMPLATES=maestro-template-workers
CONSUMER_NAME=worker-1

# ============================================================================
# Template Storage Configuration
# ============================================================================
TEMPLATES_STORAGE_PATH=/app/templates_storage
ENABLE_GIT_VERSIONING=true
GIT_REPO_PATH=/app/templates_storage
GIT_REMOTE_URL=

# ============================================================================
# Security Configuration
# ============================================================================
SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30
ENABLE_RBAC=true

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_SEMANTIC_SEARCH=false
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_GOVERNANCE=true
ENABLE_QUALITY_GATES=true

# ============================================================================
# Quality Gates Configuration
# ============================================================================
MIN_TEMPLATE_QUALITY_SCORE=70
REQUIRE_DOCUMENTATION=true
REQUIRE_EXAMPLES=true
REQUIRE_TESTS=false

# ============================================================================
# Multi-Tenancy Configuration
# ============================================================================
ENABLE_MULTI_TENANCY=true
DEFAULT_TENANT=default

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/app/logs/template-service.log

# ============================================================================
# API Configuration
# ============================================================================
API_PREFIX=/api/v1/templates
ENABLE_CORS=true
CORS_ORIGINS=*

# ============================================================================
# Caching Configuration
# ============================================================================
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000

# ============================================================================
# Performance Configuration
# ============================================================================
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_SECONDS=30
