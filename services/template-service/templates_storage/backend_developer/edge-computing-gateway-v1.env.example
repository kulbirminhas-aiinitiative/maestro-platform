# Edge Computing Gateway Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# Device Identity
# =============================================================================
DEVICE_ID=edge-gateway-001
DEVICE_NAME=Edge Gateway Production
ENVIRONMENT=production

# =============================================================================
# Local Storage
# =============================================================================
LOCAL_DB_PATH=./data/edge_gateway.db
SYNC_INTERVAL_SECONDS=60
MAX_OFFLINE_QUEUE_SIZE=10000
DATA_RETENTION_DAYS=7

# =============================================================================
# Cloud Backend Connection
# =============================================================================
CLOUD_API_URL=https://your-cloud-backend.com/api/v1
CLOUD_API_KEY=your-api-key-here-change-in-production
CONNECTION_TIMEOUT_SECONDS=30
MAX_RETRY_ATTEMPTS=5
RETRY_BACKOFF_FACTOR=2.0

# =============================================================================
# Data Processing
# =============================================================================
ENABLE_LOCAL_ANALYTICS=true
AGGREGATION_WINDOW_SECONDS=300
ENABLE_COMPRESSION=true
COMPRESSION_LEVEL=6

# =============================================================================
# Performance Tuning
# =============================================================================
BATCH_SIZE=100
WORKER_THREADS=2
MAX_CONCURRENT_SYNCS=3

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=./logs/edge_gateway.log
LOG_FORMAT=json
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30

# =============================================================================
# Monitoring
# =============================================================================
HEALTH_CHECK_PORT=8000
METRICS_ENABLED=true
METRICS_PORT=9090

# =============================================================================
# Security
# =============================================================================
ENABLE_ENCRYPTION_AT_REST=true
ENABLE_ENCRYPTION_IN_TRANSIT=true
TLS_VERIFY_CERTIFICATES=true
