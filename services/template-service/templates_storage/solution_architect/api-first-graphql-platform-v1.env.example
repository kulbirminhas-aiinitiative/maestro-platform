# API-First GraphQL Platform v1.0 Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# Application Configuration
# =============================================================================

API_PORT=8000
JWT_SECRET=
JWT_ALGORITHM=HS256
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=300
MAX_QUERY_COMPLEXITY=1000
PAGE_SIZE_DEFAULT=20
PAGE_SIZE_MAX=100
LOG_LEVEL=INFO

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# Security
# =============================================================================
ENABLE_HTTPS=false
TLS_CERT_PATH=
TLS_KEY_PATH=
