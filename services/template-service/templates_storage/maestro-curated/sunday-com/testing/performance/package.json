{
  "name": "sunday-performance-tests",
  "version": "1.0.0",
  "description": "Performance testing suite for Sunday.com using k6",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:load",
    "test:load": "k6 run scripts/load-test.js",
    "test:stress": "k6 run scripts/stress-test.js",
    "test:spike": "k6 run scripts/spike-test.js",
    "test:volume": "k6 run scripts/volume-test.js",
    "test:endurance": "k6 run scripts/endurance-test.js",
    "test:api": "k6 run scripts/api-performance.js",
    "test:frontend": "k6 run scripts/frontend-performance.js",
    "test:all": "npm run test:load && npm run test:stress && npm run test:api",
    "report": "node utils/generate-report.js",
    "setup": "node utils/setup-test-data.js",
    "cleanup": "node utils/cleanup-test-data.js"
  },
  "keywords": [
    "performance",
    "testing",
    "k6",
    "load-testing",
    "stress-testing"
  ],
  "author": "Sunday.com QA Team",
  "license": "MIT",
  "devDependencies": {
    "@types/k6": "^0.48.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "k6": "^0.48.0"
  }
}