# Sunday.com Environment Configuration
# Copy this file to .env and fill in your values

# === Application ===
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:3000

# === Database - PostgreSQL ===
POSTGRES_URL=postgresql://postgres:postgres@localhost:5432/sunday_db
POSTGRES_POOL_SIZE=20
POSTGRES_SSL=false

# === Cache - Redis ===
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# === Analytics - ClickHouse ===
CLICKHOUSE_URL=http://localhost:8123
CLICKHOUSE_DB=analytics

# === Search - Elasticsearch ===
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX_PREFIX=sunday

# === Authentication - Auth0 ===
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret
AUTH0_AUDIENCE=https://api.sunday.com
JWT_SECRET=your-jwt-secret-key-change-in-production

# === AI Services ===
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_API_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4

# AWS SageMaker
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
SAGEMAKER_ENDPOINT=your-sagemaker-endpoint

# === File Storage - AWS S3 ===
S3_BUCKET=sunday-uploads
S3_REGION=us-east-1

# === Email - SMTP ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# === Monitoring ===
# Datadog
DATADOG_API_KEY=your-datadog-api-key
DATADOG_APP_KEY=your-datadog-app-key
DATADOG_SITE=datadoghq.com

# Sentry
SENTRY_DSN=your-sentry-dsn
SENTRY_TRACES_SAMPLE_RATE=0.1
ENVIRONMENT=development

# Prometheus
PROMETHEUS_URL=http://localhost:9090
PROMETHEUS_PUSHGATEWAY_URL=http://localhost:9091

# === Message Queue - Kafka (Optional) ===
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=sunday-backend

# === Service Discovery ===
CLUSTER_NAME=local
SERVICE_REGISTRY_URL=http://localhost:8500

# === Security ===
CORS_ORIGIN=http://localhost:5173
SESSION_SECRET=your-session-secret-change-in-production
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# === Feature Flags ===
ENABLE_AI_FEATURES=true
ENABLE_ANALYTICS=true
ENABLE_REAL_TIME=true

# === Logging ===
LOG_LEVEL=info
LOG_FORMAT=json
