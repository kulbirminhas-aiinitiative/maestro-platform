# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Logging
LOG_LEVEL=INFO

# Execution Settings
MAX_PARALLEL_TASKS=10
TASK_TIMEOUT=3600
MAX_RETRIES=3
RETRY_DELAY=60

# Storage
OUTPUT_DIR=./output
ARTIFACTS_DIR=./artifacts
LOGS_DIR=./logs

# Database (optional)
# DATABASE_URL=postgresql://user:password@localhost:5432/mlpipeline

# Redis (optional)
# REDIS_URL=redis://localhost:6379/0

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Security
# API_KEY=your-secret-api-key-here
ENABLE_CORS=true