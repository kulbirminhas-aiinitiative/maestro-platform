  "security_test_data": {
    "description": "Security testing scenarios",
    "scenarios": [
      {
        "id": "sql_injection",
        "data": {
          "name": "'; DROP TABLE users; --",
          "email": "hacker@example.com"
        },
        "test_case": "TC-010",
        "expected": "Input should be sanitized, no SQL execution"
      },
      {
        "id": "xss_attack",
        "data": {
          "name": "<script>alert('XSS')</script>",
          "email": "xss@example.com"
        },
        "test_case": "TC-034",
        "expected": "Script tags should be escaped or sanitized"
      },
      {
        "id": "xss_in_email",
        "data": {
          "name": "XSS User",
          "email": "<img src=x onerror=alert(1)>@example.com"
        },
        "test_case": "Security testing",
        "expected": "Should reject invalid email format"
      },
      {
        "id": "command_injection",
        "data": {
          "name": "User; ls -la",
          "email": "cmd@example.com"
        },
        "test_case": "Security testing",
        "expected": "Should not execute system commands"
      }
    ]
  },
