# Additional policy for EKS nodes to access ECR
resource "aws_iam_role_policy" "eks_node_group_ecr" {
  name = "${local.name_prefix}-eks-node-group-ecr-policy"
  role = aws_iam_role.eks_node_group.id

  policy = jsonencode({
    Version = "2012-10-17"
