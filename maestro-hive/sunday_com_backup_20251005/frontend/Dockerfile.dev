# Development Dockerfile with hot reloading
FROM node:20-alpine AS development

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm ci

# Copy source code
COPY . .

# Expose Vite dev server port
EXPOSE 5173

# Development command with hot reloading
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]